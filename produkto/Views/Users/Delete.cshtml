@model produkto.Models.User

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete User</h2>

<h3>Are you sure you want to delete this user?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <!-- Add similar sections for other properties like Name, Date Created, etc. -->
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="UserID" />
        <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?');" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
