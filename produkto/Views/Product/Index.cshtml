@model IEnumerable<produkto.Models.Product>

@{
    ViewBag.Title = "Product List";
}

<h2>Product List</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Product Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>Date Added</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                    <td>@product.idproducts</td>
                    <td>@product.productname</td>
                    <td>@product.category</td>
                    <td>@product.price.ToString("C")</td>
                <td>@product.datetimeadded.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td>@product.description</td>
            </tr>
        }
    </tbody>
</table>
