@model IEnumerable<produkto.Models.Product>

@{
    ViewBag.Title = "Product List";
}


    <h2>Product List</h2>
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>

    <div class="card-body">
                <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Product Name</th>
                                                <th>Category</th>
                                                <th>Price</th>
                                                <th>Date Added</th>
                                                <th>Description</th>
                                                  <th>Quantity</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                                    @foreach (var product in Model)
                                                    {
                                                        <tr>
                                                            <td>@product.idproducts</td>
                                                            <td>@product.productname</td>
                                                            <td>@product.category</td>
                                                            <td>@product.price.ToString("C")</td>
                                                             <td>@product.datetimeadded.ToString("MMMM dd, yyyy")</td>
                                                            <td>@product.description</td>
                                                                  <td>@product.quantity</td>
                                                            <td>
                                                                <a asp-action="Edit" asp-route-id="@product.idproducts">Edit</a> |
                                                                <a asp-action="Delete" asp-route-id="@product.idproducts">Delete</a>
                                                            </td>
                                                        </tr>
                                                    }
                                        </tbody>
                                    </table>
                </div>
            </div>   

